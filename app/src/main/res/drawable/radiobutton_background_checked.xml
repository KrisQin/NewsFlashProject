<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:dither="true"
            android:shape="oval">
            <corners android:radius="8dp"/>
            <solid android:color="@color/white" />
            <stroke
                android:color="#3164FE"
                android:width="1dp" />

            <size
                android:width="@dimen/dp15"
                android:height="@dimen/dp15" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" >
        <shape
            android:shape="oval" >
            <corners android:radius="4dp"/>
            <solid android:color="#3164FE" />
            <size
                android:width="@dimen/dp8"
                android:height="@dimen/dp8" />

        </shape >
    </item >


</layer-list>