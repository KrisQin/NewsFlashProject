<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp5"
    android:background="@color/color_ffffff">


    <RelativeLayout
        android:id="@+id/empty_item"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp2"
            app:cardCornerRadius="@dimen/dp5"
            app:cardElevation="@dimen/dp2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="98dp">

                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="match_parent"
                        android:layout_height="98dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/picture_default" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:background="#99494B4E"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_liulan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_study_eye"
                            android:drawablePadding="@dimen/dp5"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/dp7"
                            android:textColor="@color/color_ffffff"
                            android:textSize="@dimen/sp11" />

                        <TextView
                            android:id="@+id/tv_schedule"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dp7"
                            android:drawablePadding="@dimen/dp5"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/color_ffffff"
                            android:textSize="@dimen/sp11" />


                    </RelativeLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingTop="@dimen/dp8"
                    android:paddingRight="@dimen/dp5"
                    android:paddingBottom="@dimen/dp8">

                    <TextView
                        android:id="@+id/tv_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/color_0A0A0A"
                        android:textSize="@dimen/sp14"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title1"
                        android:layout_marginTop="@dimen/dp5"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/color_97979F"
                        android:textSize="@dimen/sp14" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_author"
                        android:layout_marginTop="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_F85959"
                            android:textSize="@dimen/sp11" />

                        <View
                            android:id="@+id/view_line"
                            android:layout_width="@dimen/dp1"
                            android:layout_height="@dimen/dp15"
                            android:layout_marginLeft="@dimen/dp6"
                            android:layout_marginRight="@dimen/dp6"
                            android:background="@color/cl_DDDDDD" />

                        <TextView
                            android:id="@+id/tv_member_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/cl_009F2C"
                            android:textSize="@dimen/sp11" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

</RelativeLayout>
