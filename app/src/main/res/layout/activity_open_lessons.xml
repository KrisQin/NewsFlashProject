<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <android.support.constraint.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_text_star"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp26"
            android:layout_marginLeft="@dimen/dp18"
            android:textColor="@color/color_F85959"
            android:textSize="@dimen/sp18"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp24"
            android:text="标题"
            android:textColor="@color/color_0A0A0A"
            android:textSize="@dimen/sp18"
            app:layout_constraintLeft_toRightOf="@+id/title_text_star"
            app:layout_constraintTop_toTopOf="parent" />



        <EditText
            android:id="@+id/et_title"
            app:layout_constraintLeft_toRightOf="@+id/title_text"
            app:layout_constraintTop_toTopOf="@+id/title_text"
            android:layout_marginLeft="@dimen/dp43"
            android:layout_marginTop="2dp"
            android:maxLength="21"
            app:layout_constrainedWidth="true"
           android:textCursorDrawable="@drawable/my_cursor"
            android:background="@null"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp14"
            android:textColorHint="@color/color_B6B6BA"
            android:hint="给你的直播课程取个名字吧"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title_limit"
            app:layout_constraintLeft_toRightOf="@+id/title_text"
            app:layout_constraintTop_toBottomOf="@+id/title_text"
            android:layout_marginLeft="@dimen/dp53"
            android:layout_marginTop="23dp"
            android:visibility="invisible"
            android:textColor="@color/color_F85959"
            android:textSize="@dimen/sp12"
            android:text="字数在20字以内"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title_star_pic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_limit"
            android:layout_marginLeft="@dimen/dp18"
            android:layout_marginTop="59dp"
            android:textColor="@color/color_F85959"
            android:textSize="@dimen/sp18"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pic_text"
            app:layout_constraintLeft_toRightOf="@+id/title_star_pic"
            app:layout_constraintTop_toBottomOf="@+id/title_limit"
            android:layout_marginTop="59dp"
            android:textColor="@color/color_0A0A0A"
            android:textSize="@dimen/sp18"
            android:text="上传图片封面"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_add_pic"
            android:background="@drawable/ic_add_pic_bg"
            app:layout_constraintLeft_toRightOf="@+id/pic_text"
            app:layout_constraintTop_toBottomOf="@+id/title_limit"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="@dimen/dp27"
            android:layout_width="@dimen/dp86"
            android:layout_height="@dimen/dp86"  />

        <TextView
            android:id="@+id/title_star_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_pic"
            android:layout_marginLeft="@dimen/dp18"
            android:layout_marginTop="53dp"
            android:textColor="@color/color_F85959"
            android:textSize="@dimen/sp18"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time_text"
            app:layout_constraintLeft_toRightOf="@+id/title_star_time"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_pic"
            android:layout_marginTop="53dp"
            android:textColor="@color/color_0A0A0A"
            android:textSize="@dimen/sp18"
            android:text="开课时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_time"
            app:layout_constraintLeft_toRightOf="@+id/time_text"
            app:layout_constraintTop_toTopOf="@+id/time_text"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/dp29"
            android:textColor="@color/color_B6B6BA"
            android:textSize="@dimen/sp14"
            android:text="2019-4-3  18:20:12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_text"
            android:layout_marginTop="@dimen/dp25"
            android:background="@color/color_F2F3F4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"/>


        <TextView
            android:id="@+id/title_star_type"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line"
            android:layout_marginLeft="@dimen/dp18"
            android:layout_marginTop="28dp"
            android:textColor="@color/color_F85959"
            android:textSize="@dimen/sp18"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/type_text"
            app:layout_constraintLeft_toRightOf="@+id/title_star_type"
            app:layout_constraintTop_toBottomOf="@+id/line"
            android:layout_marginTop="28dp"
            android:textColor="@color/color_0A0A0A"
            android:textSize="@dimen/sp18"
            android:text="直播类型"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintLeft_toRightOf="@+id/time_text"
            app:layout_constraintTop_toTopOf="@+id/type_text"
            android:layout_marginTop="2dp"
            android:textColor="@color/color_B6B6BA"
            android:textSize="@dimen/sp14"
            android:text="(选择后将不能更改)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/layout_type"
            app:layout_constraintTop_toBottomOf="@+id/type_text"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp23"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp35">


            <com.blockadm.common.widget.RoundRectLayout
                android:id="@+id/layout_free"
                android:background="@color/color_fff2f3f4"
                android:layout_width="@dimen/dp95"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_free"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp14"
                    android:text="免费"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.blockadm.common.widget.RoundRectLayout>

            <com.blockadm.common.widget.RoundRectLayout
                android:id="@+id/layout_pwd"
                android:layout_centerInParent="true"
                android:background="@color/color_fff2f3f4"
                android:layout_width="@dimen/dp95"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_pwd"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp14"
                    android:text="加密"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.blockadm.common.widget.RoundRectLayout>

            <com.blockadm.common.widget.RoundRectLayout
                android:id="@+id/layout_pay"
                android:layout_alignParentRight="true"
                android:background="@color/color_fff2f3f4"
                android:layout_width="@dimen/dp95"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp14"
                    android:text="付费"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.blockadm.common.widget.RoundRectLayout>


        </RelativeLayout>

        <com.blockadm.common.widget.RoundRectLayout
            android:id="@+id/layout_money"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/layout_type"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/color_fff2f3f4"
            android:layout_marginTop="@dimen/dp25"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100">

            <RelativeLayout
                android:id="@+id/layout_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp56">

                <TextView
                    android:id="@+id/tv_text"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_0A0A0A"
                    android:text="A点"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/et_price"
                    android:textSize="@dimen/sp18"
                    android:hint="请输入价格"
                    android:inputType=""
                    android:background="@null"
                    android:textCursorDrawable="@drawable/my_cursor"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_B6B6BA"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <View
                android:id="@+id/line_mid"
                android:layout_below="@+id/layout_price"
                android:background="#e8e8e8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"/>

            <TextView
                android:id="@+id/tv_desc"
                android:text="请输入1-5000000A点，不支持小数点后数字"
                android:layout_marginBottom="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp13"
                android:layout_alignParentBottom="true"
                android:textSize="12sp"
                android:textColor="@color/color_F85959"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.blockadm.common.widget.RoundRectLayout>

        <TextView
            android:id="@+id/title_star_new"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_money"
            android:layout_marginLeft="@dimen/dp18"
            android:layout_marginTop="28dp"
            android:textColor="@color/color_F85959"
            android:textSize="@dimen/sp18"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_new"
            app:layout_constraintLeft_toRightOf="@+id/title_star_new"
            app:layout_constraintTop_toBottomOf="@+id/layout_money"
            android:layout_marginTop="28dp"
            android:textColor="@color/color_0A0A0A"
            android:textSize="@dimen/sp18"
            android:text="分类"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_status"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_money"
            android:layout_marginTop="30dp"
            android:layout_marginRight="@dimen/dp36"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/iv_arrow_right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_status"
            android:layout_marginTop="3dp"
            android:background="@mipmap/ic_group2"
            android:layout_marginRight="@dimen/dp20"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp14"
            android:text="最新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_jianjie"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_new"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="@dimen/dp24"
            android:textColor="@color/color_0A0A0A"
            android:textSize="@dimen/sp18"
            android:text="简介"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:id="@+id/layout_et"
            app:layout_constraintTop_toBottomOf="@+id/text_jianjie"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:background="@color/color_F2F3F4">

            <!--<EditText-->
                <!--android:id="@+id/et_content"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@null"-->
                <!--android:clickable="true"-->
                <!--android:gravity="left"-->
                <!--android:hint="请填写直播课程介绍哦"-->
                <!--android:maxLength="700"-->
                <!--android:minHeight="150dp"-->
                <!--android:padding="13dp"-->
                <!--android:scrollbars="vertical"-->
                <!--android:textColor="@color/color_0A0A0A"-->
                <!--android:textColorHint="@color/cl_B6B6BA"-->
                <!--android:textCursorDrawable="@drawable/my_cursor"-->
                <!--android:textSize="14sp" />-->

            <com.blockadm.adm.im_module.widget.EditTextLinearLayout
                android:id="@+id/et_content"
                android:minHeight="150dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv_count"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp13"
                android:layout_marginBottom="@dimen/dp10"
                android:text="0/500（图片代表一个文字）"
                android:textColor="@color/color_B6B6BA"
                android:textSize="11sp" />


            <ImageView
                android:id="@+id/iv_select_pic"
                android:visibility="gone"
                android:background="@drawable/ic_camaro_pic"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp27"
                android:layout_height="@dimen/dp27"
                android:layout_below="@+id/et_content"
                android:layout_margin="@dimen/dp4" />
        </RelativeLayout>






        <RelativeLayout
            android:id="@+id/layout_submit"
            android:layout_marginTop="@dimen/dp22"
            android:background="@color/color_3164FE"
            app:layout_constraintTop_toBottomOf="@+id/layout_et"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50">
            <TextView
                android:textSize="@dimen/sp18"
                android:text="完成"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>