<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp27"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_hb"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp33"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@drawable/bg_r3_white"
                android:layout_width="@dimen/dp53"
                android:layout_height="@dimen/dp53">

                <ImageView
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_live_send_hong_bao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/dp10"
                android:textColor="@color/color_97979F"
                android:text="红包"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_pic"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp33"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@drawable/bg_r3_white"
                android:layout_width="@dimen/dp53"
                android:layout_height="@dimen/dp53">

                <ImageView
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_live_send_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/dp10"
                android:textColor="@color/color_97979F"
                android:text="图片"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_setting"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp33"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@drawable/bg_r3_white"
                android:layout_width="@dimen/dp53"
                android:layout_height="@dimen/dp53">

                <ImageView
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_live_send_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/dp10"
                android:textColor="@color/color_97979F"
                android:text="设置管理员"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_pt"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@drawable/bg_r3_white"
                android:layout_width="@dimen/dp53"
                android:layout_height="@dimen/dp53">

                <ImageView
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_live_send_kefu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="@dimen/dp10"
                android:textColor="@color/color_97979F"
                android:text="联系平台"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:background="@color/cl_DDDDDD"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"/>

    <RelativeLayout
        android:id="@+id/layout_cancel"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="@dimen/dp14"
            android:textColor="@color/color_0A0A0A"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>