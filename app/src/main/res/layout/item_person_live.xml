<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="156dp"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp11"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginTop="@dimen/dp10"
        android:text="我是二级标题"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp15"
        app:layout_constraintLeft_toRightOf="@+id/iv_image"
        app:layout_constraintTop_toTopOf="@+id/iv_image" />

    <TextView
        android:id="@+id/tv_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginTop="@dimen/dp9"
        android:text="作者昵称"
        android:textColor="@color/color_97979F"
        android:textSize="@dimen/sp12"
        app:layout_constraintLeft_toRightOf="@+id/iv_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginBottom="@dimen/dp7"
        android:text="直播时间：2019-03-05 18:20:00 "
        android:textColor="@color/color_97979F"
        android:textSize="@dimen/sp12"
        app:layout_constraintBottom_toBottomOf="@+id/iv_image"
        app:layout_constraintLeft_toRightOf="@+id/iv_image" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="156dp"
        android:layout_height="23dp"
        android:layout_marginLeft="@dimen/dp15"
        android:background="@drawable/shape_person_live_item"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/iv_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/iv_image">

        <TextView
            android:id="@+id/tv_live_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="已结束"
            android:textColor="@color/white"
            android:textSize="@dimen/sp11" />

    </RelativeLayout>

    <View
        app:layout_constraintTop_toBottomOf="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"/>


</android.support.constraint.ConstraintLayout>