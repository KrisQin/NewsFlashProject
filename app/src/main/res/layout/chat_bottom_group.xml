<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f7f8fa"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="55dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_action_audio_bg" />
        </RelativeLayout>


        <EditText
            android:id="@+id/et_text_input"
            android:layout_width="0dp"
            android:textCursorDrawable="@drawable/my_cursor"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:background="@drawable/msg_editor_border"
            android:maxHeight="120dp"
            android:minHeight="35dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/bt_voice_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="@dimen/sp14"
            android:visibility="gone"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bg_r2_white"
            android:text="按住说话"
            android:textColor="@color/color_0A0A0A"
             />

        <RelativeLayout
            android:id="@+id/layout_send"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_send"
                android:background="@drawable/bg_r14_blue"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14"
                android:text="发送"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp8"
                android:gravity="center"
                android:layout_width="@dimen/dp77"
                android:layout_height="29dp" />

            <LinearLayout
                android:id="@+id/layout_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_show_toast"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/ic_show_text_no" />

                <ImageView
                    android:id="@+id/iv_jia"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/ic_live_bottom_jia" />




            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c2c2c2" />

</LinearLayout>
