<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp21"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="134dp"
        android:layout_height="@dimen/dp100"
        app:cardCornerRadius="@dimen/dp3">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/picture_default" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_alignParentBottom="true"
                android:background="#99494B4E"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_text"
                    android:text="直播时间:"
                    android:textSize="@dimen/sp10"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_lessons_time"
                    android:layout_toRightOf="@+id/tv_text"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_marginLeft="@dimen/dp3"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_marginLeft="@dimen/dp19"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginBottom="@dimen/dp3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_333333"
            android:textSize="18sp"
            android:text="1111111"
            android:maxLength="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_amount"
            android:textColor="@color/color_F85959"
            android:textSize="17sp"
            android:text="11"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_buy_time"
            android:textColor="@color/color_B6B6BA"
            android:textSize="11sp"
            android:text="11"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    </LinearLayout>


</LinearLayout>