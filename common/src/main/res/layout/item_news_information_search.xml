<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:paddingTop="@dimen/dp10"
    android:paddingLeft="@dimen/dp10"
    android:paddingRight="@dimen/dp10"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_marginRight="@dimen/dp15"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_title"
            android:ellipsize="end"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_0A0A0A"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />

        <TextView
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/dp5"
            android:ellipsize="end"
            android:maxLines="2"
            android:id="@+id/tv_content"
            android:textColor="@color/color_97979F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_res"
            android:textColor="@color/color_97979F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

    <com.blockadm.common.comstomview.RoundImageView
        app:radius="@dimen/dp5"
        app:type="round"
        android:id="@+id/iv"
        android:background="@color/color_ffffff"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:layout_height="@dimen/dp96"
        android:scaleType="fitXY"
        android:src="@mipmap/default_app"
        />



</LinearLayout>

    <View
        android:layout_marginTop="@dimen/dp8"
        android:background="@color/color_fff2f3f4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"/>
</LinearLayout>
