<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.blockadm.common.comstomview.CircleImageView
            android:id="@+id/civ_headimage"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/dp5"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            />
        <TextView
            android:layout_toRightOf="@+id/civ_headimage"
            android:textSize="16sp"
            android:id="@+id/tv_author_info_type"
            android:textColor="#FF3164FE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dp10"
            android:id="@+id/tv_nickname"
            android:layout_toRightOf="@+id/tv_author_info_type"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_97979F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignTop="@+id/tv_nickname"
            android:layout_alignBottom="@+id/tv_nickname"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_nickname"
            android:id="@+id/iv_zuan"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_toRightOf="@+id/civ_headimage"
            android:layout_marginTop="@dimen/dp6"
            android:layout_below="@+id/tv_nickname"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_back_name"
                android:layout_marginLeft="@dimen/dp5"
                android:text=""
                android:textSize="@dimen/sp16"
                android:textColor="@color/color_FF507DAF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_marginLeft="@dimen/dp10"
                android:textSize="@dimen/sp14"
                android:textColor="@color/color_0A0A0A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>



        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp4"
            android:paddingRight="@dimen/dp10"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/dp10"
            android:drawableLeft="@mipmap/reply_agree_default"
            android:id="@+id/tv_zan"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_FFFF6B00"
            android:padding="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



    <RelativeLayout
        android:background="@color/color_ffffff"
        android:layout_marginLeft="@dimen/dp48"
        android:layout_width="match_parent"
        android:padding="@dimen/dp6"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_cre_time"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_97979F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>
