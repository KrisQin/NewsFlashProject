<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp10"
    android:background="@color/color_ffffff"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.blockadm.common.comstomview.RoundImageView
        app:radius="@dimen/dp5"
        app:type="round"
        android:scaleType="fitXY"
        android:id="@+id/iv_image"
        android:src="@mipmap/picture_default"
        android:layout_width="match_parent"
        android:layout_height="83dp" />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100">
        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_title1"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:text="大多数多所多"
            android:textSize="@dimen/sp16"
            android:textColor="@color/color_0A0A0A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_below="@+id/tv_title1"
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/tv_looked"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:text="浏览数"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_97979F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_below="@+id/tv_looked"
            android:layout_marginTop="@dimen/dp5"
            android:id="@+id/tv_writer_nickname"
            android:textSize="@dimen/sp16"
            android:textColor="@color/color_97979F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_price"
            android:textSize="@dimen/sp16"
            android:layout_alignBottom="@+id/tv_writer_nickname"
            android:textColor="@color/color_FF6B00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>





</LinearLayout>
