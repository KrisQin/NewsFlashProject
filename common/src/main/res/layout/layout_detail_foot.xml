<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/dp10"
    android:gravity="center_vertical"
    android:background="@color/color_ffffff"
    android:minHeight="@dimen/dp50"
    android:layout_height="wrap_content">

    <EditText
        android:layout_gravity="center_vertical"
        android:padding="@dimen/dp10"
        android:gravity="center_vertical"
        android:id="@+id/et_say_content"
        android:background="@drawable/bg_r23"
        android:drawablePadding="@dimen/dp10"
        android:drawableLeft="@mipmap/reply_edit"
        android:hint="说点什么..."
        android:maxLength="200"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />


    <com.blockadm.common.comstomview.CheckEmptyTextView
        android:layout_marginLeft="@dimen/dp8"
        android:id="@+id/tv_send"
        android:textSize="@dimen/sp16"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp15"
        android:background="@mipmap/talk"
        android:textColor="@color/color_FF3164FE"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/et_say_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
