        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_cre_time"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_97979F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
