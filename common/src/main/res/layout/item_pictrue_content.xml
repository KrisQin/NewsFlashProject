    <LinearLayout
        android:layout_marginLeft="@dimen/dp48"
        android:background="@color/color_fff8f8f8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.blockadm.common.comstomview.ScrollDisabledListView
            android:id="@+id/lv_reply"
            android:divider="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="@dimen/sp16"
            android:id="@+id/tv_open"
            android:visibility="gone"
            android:layout_margin="@dimen/dp10"
            android:textColor="@color/color_FF507DAF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <RelativeLayout
        android:background="@color/color_ffffff"
        android:layout_marginLeft="@dimen/dp48"
        android:layout_width="match_parent"
        android:padding="@dimen/dp6"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_cre_time"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_97979F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:paddingBottom="@dimen/dp2"
            android:paddingTop="@dimen/dp2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="回复"
            android:background="@drawable/comment_bg_r"
            android:id="@+id/tv_follow"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_0A0A0A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_marginBottom="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp48"
        android:background="@color/color_fff2f3f4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"/>

</LinearLayout>
