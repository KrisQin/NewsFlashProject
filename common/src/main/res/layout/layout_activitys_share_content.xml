<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:background="@color/color_ffffff"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/iv"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/sharepic_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:id="@+id/tv"
            android:layout_below="@+id/iv"
            android:layout_marginTop="@dimen/dp30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动"
            android:textColor="#ff3164fe"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:layout_marginTop="@dimen/dp20"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:textColor="#FF494B4E"
            android:textSize="@dimen/sp18" />


        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_below="@+id/tv_title"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp20"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:text="地址:"
                android:textColor="@color/color_ff97979f"
                android:textSize="@dimen/dp16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/color_0A0A0A"
                android:textSize="@dimen/dp16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll2"
            android:layout_below="@+id/ll_1"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="top"
                android:text="主办:"
                android:textColor="@color/color_ff97979f"
                android:textSize="@dimen/dp16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="top"
                android:id="@+id/tv_zhuban"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/color_0A0A0A"
                android:textSize="@dimen/dp16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll3"
            android:layout_below="@+id/ll2"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:text="时间:"
                android:textColor="@color/color_ff97979f"
                android:textSize="@dimen/dp16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_marginLeft="@dimen/dp10"
                android:textColor="@color/color_0A0A0A"
                android:textSize="@dimen/dp16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_below="@+id/ll3"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15"
            android:id="@+id/v"
            android:layout_marginTop="@dimen/dp40"
            android:background="@color/color_fff2f3f4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp2"/>

        <include
            android:id="@+id/layout_scan"
            android:layout_below="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_scan"/>



    </RelativeLayout>
</ScrollView>