<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/dp10"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:background="@color/color_FF3164FE"
            android:layout_width="@dimen/dp4"
            android:layout_height="@dimen/dp18"/>

        <TextView
            android:id="@+id/tv_type_author"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/sp14"
            android:text="专栏作者"
            android:textColor="@color/color_0A0A0A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.blockadm.common.comstomview.CircleImageView
            android:id="@+id/civ_headimage"
            android:src="@mipmap/picture_default"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/dp5"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp34"
            android:layout_height="@dimen/dp36"
            />

        <ImageView
            android:layout_marginLeft="-15dp"
            android:layout_toRightOf="@+id/civ_headimage"
            android:layout_alignBottom="@+id/civ_headimage"
            android:layout_alignTop="@+id/civ_headimage"
            android:id="@+id/iv_level"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/user_vip_copy" />

        <TextView
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginTop="@dimen/dp10"
            android:layout_toRightOf="@+id/civ_headimage"
            android:text="姓名"
            android:textColor="@color/color_FF4A4A4A"
            android:id="@+id/tv_name"
            android:textSize="@dimen/sp14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignBottom="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_name"
            android:id="@+id/iv_zuan"
            android:layout_width="20dp"
            android:layout_height="20dp" />


        <TextView
            android:visibility="gone"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/dp10"
            android:layout_toRightOf="@+id/civ_headimage"
            android:text="专栏"
            android:layout_marginRight="@dimen/dp10"
            android:textColor="@color/color_FF4A4A4A"
            android:id="@+id/tv_columnist"
            android:textSize="@dimen/sp12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp10"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_columnist"
            android:text="课程"
            android:textColor="@color/color_FF4A4A4A"
            android:id="@+id/tv_course"
            android:textSize="@dimen/sp12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:visibility="gone"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_course"
            android:text="文章"
            android:textColor="@color/color_FF4A4A4A"
            android:id="@+id/tv_article"
            android:textSize="@dimen/sp12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp10"
            android:text="关注"
            android:gravity="center"
            android:textColor="@color/color_ffffff"
            android:id="@+id/tv_attention"
            android:textSize="@dimen/sp14"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp26" />




    </RelativeLayout>



</LinearLayout>
