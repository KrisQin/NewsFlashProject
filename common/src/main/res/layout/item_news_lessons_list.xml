<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingTop="@dimen/dp15"
    android:paddingBottom="@dimen/dp15"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:paddingRight="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:drawableLeft="@mipmap/radio01_list_play"
        android:layout_alignParentLeft="true"
        android:id="@+id/tv_status"
        android:textColor="@color/color_0A0A0A"
        android:textSize="@dimen/sp18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


  <LinearLayout
      android:layout_toRightOf="@+id/tv_status"
      android:id="@+id/ll_title"
      android:layout_marginRight="@dimen/dp35"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView

          android:id="@+id/tv_title"
          android:textColor="@color/color_0A0A0A"
          android:textSize="@dimen/sp16"
          android:maxLines="2"
          android:ellipsize="end"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content" />


      <TextView
          android:paddingLeft="@dimen/dp5"
          android:paddingRight="@dimen/dp5"
          android:visibility="gone"
          android:layout_marginLeft="@dimen/dp10"
          android:id="@+id/tv_sound_type"
          android:text="音频"
          android:background="@drawable/jigou_bg_r2"
          android:textColor="#3164FE"
          android:textSize="@dimen/sp12"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <TextView
          android:paddingLeft="@dimen/dp5"
          android:paddingRight="@dimen/dp5"
          android:visibility="gone"
          android:layout_marginLeft="@dimen/dp10"
          android:id="@+id/tv_inagetext_type"
          android:text="图文"
          android:background="@drawable/jigou_bg_r2"
          android:textColor="#3164FE"
          android:textSize="@dimen/sp12"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />


  </LinearLayout>




    <TextView
        android:layout_marginTop="@dimen/dp6"
        android:layout_alignLeft="@+id/ll_title"
        android:layout_below="@+id/ll_title"
        android:textColor="@color/color_97979F"
        android:text="@string/cancel"
        android:textSize="@dimen/sp14"
        android:id="@+id/tv_time_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
