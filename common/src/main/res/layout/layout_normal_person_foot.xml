<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/dp10"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/color_f7f8fa"
    android:minHeight="@dimen/dp50"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_say_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/dp10"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/bg_r2_white"
        android:textSize="@dimen/sp16"
        android:textCursorDrawable="@drawable/my_cursor"
        android:layout_marginLeft="@dimen/dp13"
        android:layout_marginRight="@dimen/dp16"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:maxLines="4"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_send"
            android:visibility="gone"
            android:background="@drawable/bg_r14_blue"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:text="发送"
            android:layout_marginRight="@dimen/dp13"
            android:gravity="center"
            android:layout_width="@dimen/dp77"
            android:layout_height="29dp" />


        <LinearLayout
            android:id="@+id/layout_bt"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_reward"
                android:background="@drawable/ic_reward_text"
                android:layout_marginRight="@dimen/dp10"
                android:layout_width="@dimen/dp27"
                android:layout_height="@dimen/dp27" />

            <ImageView
                android:id="@+id/iv_ask"
                android:background="@drawable/ic_ask_text"
                android:layout_marginRight="@dimen/dp10"
                android:layout_width="@dimen/dp27"
                android:layout_height="@dimen/dp27" />

            <ImageView
                android:id="@+id/iv_normal_show"
                android:background="@drawable/ic_show_text_no"
                android:layout_marginRight="@dimen/dp10"
                android:layout_width="@dimen/dp27"
                android:layout_height="@dimen/dp27" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
