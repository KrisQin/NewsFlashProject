<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/ll_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="gone" />


    <FrameLayout
        android:id="@+id/fl_content_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_titlebar"></FrameLayout>

    <include
        android:id="@+id/layout_error"
        layout="@layout/layout_customer_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_titlebar"
        android:background="@color/cl_ededed"
        android:visibility="gone" />

    <include
        android:id="@+id/layout_empty"
        layout="@layout/layout_customer_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_titlebar"
        android:background="@color/cl_ededed"
        android:visibility="gone" />

    <include
        android:id="@+id/layout_loading"
        layout="@layout/layout_customer_ing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_titlebar"
        android:background="@color/cl_ededed"
        android:visibility="gone" />


</RelativeLayout>