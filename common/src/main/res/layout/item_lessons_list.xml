<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_ffffff"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    

    <com.blockadm.common.comstomview.RoundImageView
        app:radius="@dimen/dp5"
        app:type="round"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:id="@+id/iv_image"
        android:src="@mipmap/picture_default"
        android:layout_width="310dp"
        android:layout_height="150dp" />

    <RelativeLayout
        android:paddingRight="@dimen/dp15"
        android:paddingLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100">
        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_title1"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textSize="@dimen/sp16"
            android:textColor="@color/color_0A0A0A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/tv_title1"
            android:layout_marginTop="@dimen/dp8"
            android:id="@+id/tv_lessons_num"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:text="课程数"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_97979F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/tv_title1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_lessons_num"
            android:layout_marginTop="@dimen/dp8"
            android:id="@+id/tv_looked"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:text="浏览数"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_97979F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_price"
           android:layout_centerVertical="true"
            android:ellipsize="end"
            android:textSize="@dimen/sp18"
            android:textColor="@color/color_FF6B00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/tv_lessons_num"
            android:layout_marginTop="@dimen/dp8"
            android:id="@+id/tv_writer_nickname"
            android:textSize="@dimen/sp16"
            android:textColor="@color/color_97979F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

