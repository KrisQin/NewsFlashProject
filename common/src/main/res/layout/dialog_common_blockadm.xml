<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape_dottedrect"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="20dip"
            android:layout_height="40dip"
            android:layout_margin="10dip"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_prompte"
            style="@style/item_font_middle"
            android:layout_margin="8dip"
            android:text="确定要清除缓存么？"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dp10"
            android:gravity="center"
            android:id="@+id/dialog_title"
            style="@style/item_font_middle"
            android:layout_centerHorizontal="true"
            android:text="一鸣发艺（深圳大学）"
            android:textColor="@color/color_0A0A0A"
            android:textSize="18sp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/dialog_message"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:maxLines="100"
            android:scrollHorizontally="false"
            android:text="确定删除会员卡"
            android:textColor="@color/color_B6B6BA"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dialog_warning"
        style="@style/item_font_middle"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="忘记密码?"
        android:textColor="@color/cl_dialog_96969f" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/cl_d9d9d9" />

    <LinearLayout
        android:id="@+id/ll_dialog_bottom"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:text="取消"
            android:textColor="@color/color_999999"
            android:textSize="16sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/cl_d9d9d9" />

        <Button
            android:id="@+id/btn_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:text="残忍注销"
            android:textColor="@color/color_blue"
            android:textSize="16sp" />
    </LinearLayout>



</LinearLayout>