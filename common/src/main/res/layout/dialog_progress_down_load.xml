<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_r5_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp21"
        android:text="下载提示"
        android:textColor="@color/color_0A0A0A"
        android:textSize="@dimen/sp18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp18"
        android:text="当前下载进度："
        android:textColor="@color/color_97979F"
        android:textSize="@dimen/sp18" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp17"
        android:layout_marginLeft="@dimen/dp17"
        android:layout_marginTop="@dimen/dp12"
        android:layout_height="13dp"
        android:progressDrawable="@drawable/layer_list_progressbar" />

    <RelativeLayout
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="@dimen/dp9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_per"
            android:text="77%"
            android:textColor="@color/color_97979F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_m"
            android:text="8.9M/34M"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_97979F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_cancel"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp13"
        android:layout_marginRight="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_marginBottom="@dimen/dp12"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"

            android:text="取消"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/sp12" />

    </RelativeLayout>





</LinearLayout>