<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_fff2f3f4"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.blockadm.common.comstomview.BaseTitleBar
        android:id="@+id/tilte"
        app:lefttext_is_show="true"
        app:righttext_is_show="true"
        android:layout_alignParentTop="true"
        app:lefttext_color="@color/color_0A0A0A"
        app:centertext = "提现管理"
        app:lefttext=""
        app:lefticon_is_show="true"
        app:lefticon_src="@mipmap/ic_back"
        app:righticon_is_show="true"
        app:righttext=""
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45" />

    <View
        android:background="@color/color_fff2f3f4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp5"/>

    <RelativeLayout
        android:background="@color/color_ffffff"
        android:id="@+id/rl_alipay"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv"
            android:layout_marginLeft="@dimen/dp15"
            android:src="@mipmap/ic_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="@dimen/dp15"
            android:layout_toRightOf="@+id/iv"
            android:textSize="@dimen/sp18"
            android:text="支付宝"
            android:layout_centerVertical="true"
            android:textColor="@color/color_0A0A0A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:paddingRight="@dimen/dp15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/color_fff2f3f4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <RelativeLayout
        android:visibility="gone"
        android:background="@color/color_ffffff"
        android:id="@+id/rl_wechat"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv2"
            android:layout_marginLeft="@dimen/dp15"
            android:src="@mipmap/ic_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="@dimen/dp15"
            android:layout_toRightOf="@+id/iv2"
            android:textSize="@dimen/sp18"
            android:text="微信"
            android:layout_centerVertical="true"
            android:textColor="@color/color_0A0A0A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:paddingRight="@dimen/dp15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    





</LinearLayout>