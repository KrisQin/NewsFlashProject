<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dp14"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:background="#FF3164FE"
            android:layout_width="@dimen/dp4"
            android:layout_height="@dimen/dp18"/>

        <TextView
            android:id="@+id/tv_time2"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/sp14"
            android:text="2018年 11 月 25日"
            android:textColor="@color/color_0A0A0A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp8"
        android:background="@color/color_fff8f8f8"
        android:padding="@dimen/dp8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:text=""
            android:id="@+id/tv_title2"
            android:paddingBottom="@dimen/dp10"
            android:maxLines="3"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textSize="@dimen/sp16"
            android:textColor="@color/color_0A0A0A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_images2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_margin="@dimen/dp2"
                android:id="@+id/iv_path2"
                android:scaleType="fitXY"
                android:background="@mipmap/picture_default"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp170" />



            <ImageView
                android:layout_margin="@dimen/dp2"
                android:id="@+id/iv_path12"
                android:scaleType="fitXY"
                android:background="@mipmap/picture_default"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp170" />


        </LinearLayout>





        <TextView
            android:id="@+id/tv_content2"
            android:layout_below="@+id/ll_images2"
            android:paddingBottom="@dimen/dp10"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:text=""
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_97979F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">


        <TextView
            android:layout_toLeftOf="@+id/tv_nolike2"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/ic_yes_select"
            android:drawablePadding="@dimen/dp10"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_FFFF6B00"
            android:id="@+id/tv_like2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_toLeftOf="@+id/iv_share2"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/ic_no_select"
            android:drawablePadding="@dimen/dp10"
            android:textSize="@dimen/sp14"
            android:layout_marginLeft="@dimen/dp30"
            android:textColor="@color/color_FF3164FE"
            android:id="@+id/tv_nolike2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_nolike2"
            android:layout_marginLeft="@dimen/dp20"
            android:id="@+id/iv_share2"
            android:src="@mipmap/quicknews_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
