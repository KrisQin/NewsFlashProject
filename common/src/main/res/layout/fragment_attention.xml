<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <com.blockadm.common.comstomview.banner.BannerView
        android:background="@color/color_ffffff"
        android:padding="@dimen/dp10"
        android:id="@+id/bannerView"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        app:bottomColor="#453e3e3e"
        app:layout_scrollFlags="scroll|enterAlways"
        app:dotDistance="2dp"
        app:dotIndicatorFocus="#FF3164FE"
        app:dotIndicatorNormal="#ffffff"
        app:dotSize="6dp"/>

    <LinearLayout
        android:id="@+id/ll"
        android:gravity="center_vertical"
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40">

        <TextView
            android:textColor="@color/color_0A0A0A"
            android:textSize="@dimen/sp16"
            android:text="添加你感兴趣的标签"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

          <TextView
              android:id="@+id/tv_manager"
              android:text="+订阅管理"
              android:gravity="right"
              android:textSize="@dimen/sp14"
              android:textColor="@color/color_FF3164FE"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content" />


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:padding="@dimen/dp20"
        android:id="@+id/rv_tags"
        android:background="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:layout_below="@+id/tl_tab"
        layout="@layout/fra_informationlist_customer_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>
