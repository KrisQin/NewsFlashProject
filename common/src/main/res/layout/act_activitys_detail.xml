<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back"
            android:padding="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/color_0A0A0A"
            android:textSize="@dimen/sp18"
            android:layout_centerInParent="true"
            android:text="活动详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




        <ImageView
            android:id="@+id/iv_shard"
            android:paddingRight="@dimen/dp10"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_centerVertical="true"
            android:src="@mipmap/activitys_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_toLeftOf="@+id/iv_shard"
            android:paddingRight="@dimen/dp10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/color_fff2f3f4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp5"/>
<ScrollView android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:scrollbars="none"
   >


<LinearLayout android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >



    <ImageView
        android:id="@+id/iv_logo"
        android:scaleType="fitXY"
        android:src="@mipmap/picture_default"
        android:layout_width="match_parent"
        android:layout_height="188dp" />


    
    <TextView
        android:paddingLeft="@dimen/dp10"
        android:gravity="center_vertical"
        android:background="@color/color_ffffff"
        android:id="@+id/tv_title"
        android:textColor="@color/color_0A0A0A"
        android:textSize="@dimen/sp16"
        android:maxLines="2"
        android:minHeight="@dimen/dp48"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/color_fff2f3f4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"/>

    <LinearLayout
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="地址"
            android:textColor="@color/color_ff97979f"
            android:textSize="@dimen/dp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_marginLeft="@dimen/dp40"
            android:textColor="@color/color_0A0A0A"
            android:textSize="@dimen/dp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@color/color_fff2f3f4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"/>


    <LinearLayout
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="主办"
            android:textColor="@color/color_ff97979f"
            android:textSize="@dimen/dp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_zhuban"
            android:layout_marginLeft="@dimen/dp40"
            android:textColor="@color/color_0A0A0A"
            android:textSize="@dimen/dp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@color/color_fff2f3f4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"/>



    <LinearLayout
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="时间"
            android:textColor="@color/color_ff97979f"
            android:textSize="@dimen/dp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_marginLeft="@dimen/dp40"
            android:textColor="@color/color_0A0A0A"
            android:textSize="@dimen/dp16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/color_fff2f3f4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"/>

    <TextView
        android:paddingLeft="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
        android:text="活动详情"
        android:textColor="@color/color_ff97979f"
        android:textSize="@dimen/dp16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <WebView
        android:visibility="gone"
        android:id="@+id/wv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>


</ScrollView>

</LinearLayout>