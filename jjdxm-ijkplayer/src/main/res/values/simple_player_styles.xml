<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SeekBarAppTheme">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:focusable">true</item>
        <item name="android:progressDrawable">
            @drawable/simple_player_progress_horizontal_holo_dark
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/simple_player_progress_horizontal_holo_dark
        </item>
        <item name="android:thumb">@drawable/simple_player_control_selector_holo_dark</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>

    </style>


    <style name="VideoPlayer.MediaController.SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/video_player_scrubber_progress_horizontal
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/video_player_scrubber_progress_horizontal
        </item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>
        <item name="android:thumb">@drawable/icon_dot_pro_bar</item>
        <item name="android:thumbOffset">0dip</item>
        <item name="android:paddingLeft">1dip</item>
        <item name="android:paddingRight">1dip</item>
    </style>
</resources>