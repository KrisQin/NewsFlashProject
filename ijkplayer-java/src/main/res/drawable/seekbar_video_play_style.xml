<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 底色 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dp" />

            <gradient
                android:angle="270"
                android:centerColor="#7f999999"
                android:centerY="0.45"
                android:endColor="#7f999999"
                android:startColor="#7f999999" />
        </shape>
    </item>
    <!-- 进度色 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="#00a6f4"
                    android:centerY="0.45"
                    android:endColor="#00a6f4"
                    android:startColor="#00a6f4" />
            </shape>
        </clip>
    </item>

</layer-list>